{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Recherche Simple {% endblock %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
<link href="{{ asset('css/search.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block body %}
<div class="wrapper-search">
    <div class="titles">
        <h1 class="title-search">Recherche Simple</h1>
        <p class="subtitle-search">Rechercher par nom de ville ou <a href="#"> faites une recherche avancée</a></p>
    </div>

    <div class="container-search">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-sm pull-right btn-submit-advanced-search">{{ button_label|default('Rechercher') }}</button>
        {{ form_end(form) }}

    </div>
</div>

</div>
</div>

<template id="template__elt">
    <div class="card">
        <div class="card-body">

        </div>
    </div>
</template>

