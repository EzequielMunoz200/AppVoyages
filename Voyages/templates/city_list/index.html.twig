{% extends 'base.html.twig' %}

{% block title %} {{ parent()}} - Mes villes {% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/city_list_show.css') }}"/>
{% endblock %}

{% block body %}

<div class="wrapper-city-list-show">
    <h1>Mes villes</h1>

    <table class="table table-striped ">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Crée le:</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for list in app.user.cityLists %}
            <tr>
                <td><a href="{{ app.request.schemeAndHttpHost ~ list.url }}">{{ list.name }}</a></td>
                <td>{{ list.createdAt ? list.createdAt|date('d-m-Y') : '' }}</td>
                <td>{{ include('city_list/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Vous n'avez pas de listes sauvegardées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>



{% endblock %}
