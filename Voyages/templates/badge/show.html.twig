{% extends 'base.html.twig' %}

{% block title %}Badge{% endblock %}

{% block body %}
    <h1>Badge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ badge.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ badge.name }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ badge.filename }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ badge.level }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ badge.createdAt ? badge.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ badge.updatedAt ? badge.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('badge_index') }}">back to list</a>

    <a href="{{ path('badge_edit', {'id': badge.id}) }}">edit</a>

    {{ include('badge/_delete_form.html.twig') }}
{% endblock %}
